<div class="flex items-start mb-3">
  <img src="<%= url_for(product.images.first.variant(:thumb)) %>" alt="<%= product.title %>" class="w-20 sm:w-32 aspect-square object-cover rounded-md">
  <div class="ml-3">
    <h1 class="text-2xl sm:text-3xl">
      <%= product.title %>
    </h1>
    <p>
      <%= product.description %>
    </p>
    <div class="flex mt-2 space-x-4">
      <div>
        <div>Materialkosten:</div>
        <span class="@5xl:text-xl font-bold text-gray-800">
          <%= number_to_currency product.materials.sum(&:cost), unit: "â‚¬", format: "%n %u" %>
        </span>
      </div>
      <div>
        <div>Zeitaufwand:</div>
        <span class="@5xl:text-xl font-bold text-gray-800">
          <%= number_with_precision(product.time_invested, precision: (product.time_invested % 1 == 0 ? 0 : 1), separator: ",") %> Std.
        </span>
      </div>
    </div>
  </div>
</div>