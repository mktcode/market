<%= render partial: 'shared/messages' %>
<% image ||= "header.webp" %>
<% logo ||= "emma-herbst-logo.png" %>
<% slogan ||= "Stabile Werte. Keine Kompromisse." %>
<div
  class="relative w-full h-[150px] sm:h-[250px] bg-cover bg-center overflow-hidden"
  style="background-image: url('<%= asset_path(image) %>');"
>
  <div class="absolute inset-0 bg-black bg-opacity-50 flex flex-col sm:flex-row items-center justify-center">
    <p class="text-2xl sm:text-3xl text-white text-center">
      <%= slogan %>
    </p>
  </div>
</div>