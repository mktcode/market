<%= link_to product_path(product) do %>
  <div class="bg-white rounded-lg hover:shadow-lg transition">
    <img src="<%= url_for(product.images[0]) %>" alt="<%= product.title %>" class="w-full aspect-square object-cover rounded-t-md">
    <h3 class="text-lg font-semibold mt-4 px-4"><%= product.title %></h3>
    <p class="text-gray-600 mt-2 px-4 line-clamp-2"><%= product.description %></p>
    <div class="mt-4 flex justify-between items-center px-4 pb-4">
      <span class="text-xl font-bold text-gray-800"><%= number_to_currency(10) %></span>
    </div>
  </div>
<% end %>