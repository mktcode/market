<%= render partial: 'shared/header' %>

<%= render layout: 'layouts/content' do %>
  <% content_for :title, "Editing product" %>

  <div class="flex justify-between items-center mb-4">
    <div>
      <h1 class="text-3xl sm:text-5xl mb-2 flex items-center">
        Produkt bearbeiten
      </h1>
      <p class="text-xl sm:text-3xl text-gray-600">
        Hier kannst du die Details deines Produkts bearbeiten.
      </p>
    </div>
    <div class="flex space-x-3 items-center">
      <%= link_to @product do %>
        <button class="secondary">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 0 1-2.25 2.25M16.5 7.5V18a2.25 2.25 0 0 0 2.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 0 0 2.25 2.25h13.5M6 7.5h3v3H6v-3Z" />
          </svg>

          Zur Produktseite
        </button>
      <% end %>
    </div>
  </div>

  <%= render "form", product: @product %>
<% end %>