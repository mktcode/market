<div id="<%= dom_id @product %>" class="max-w-screen-lg mx-auto py-4 sm:py-8">
  <%= render partial: 'shared/messages' %>
  
  <div class="flex justify-between items-center mb-4">
    <div class="mb-4">
      <div class="flex items-center justify-between mb-3">
        <h1 class="text-3xl sm:text-5xl mb-2 flex items-center">
          <%= @product.title %> wirklich löschen?
        </h1>
      </div>
      <p class="text-xl sm:text-3xl text-gray-600">
        Pass auf! Das kann nicht mehr rückgängig gemacht werden!
      </p>
    </div>
  </div>

  <% if @product.ordered_images.any? %>
    <div class="relative aspect-square max-w-96 mx-auto overflow-hidden rounded-lg">
      <%= image_tag @product.ordered_images.first, class: "w-full h-full object-cover" %>
      <div class="absolute inset-0 bg-red-500/30 flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-24 text-white opacity-70">
          <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
        </svg>
      </div>
    </div>
  <% end %>

  <div class="mt-12 flex justify-center items-center space-x-4">
    <%= link_to product_path(@product) do %>
      <button class="secondary big">
        Abbrechen
      </button>
    <% end %>
    <%= button_to product_path(@product), method: :delete, class: "danger big" do %>
      Ja, wirklich löschen
    <% end %>
  </div>
</div>
