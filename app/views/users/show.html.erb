<% if @user.header.attached? %>
  <%= render partial: 'users/header', locals: { header: @user.header } %>
<% else %>
  <%= render partial: 'shared/header' %>
<% end %>

<div id="<%= dom_id @user %>" class="max-w-screen-lg mx-auto py-4 sm:py-8">
  <div class="flex justify-between items-center mb-4">
    <div class="mb-4">
      <div class="flex items-start justify-between mb-3">
        <h1 class="text-3xl sm:text-5xl mb-2 flex items-center">
          <%= image_tag @user.avatar.variant(:thumb), class: 'w-20 h-20 rounded-full mr-4' if @user.avatar.attached? %>
          <span class="first-letter:uppercase">
            <%= @user.name %>
          </span>
        </h1>
        <div class="flex items-center space-x-2">
          <% if Current.user != @user %>
            <button class="ml-3 secondary">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 mr-2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0M3.124 7.5A8.969 8.969 0 0 1 5.292 3m13.416 0a8.969 8.969 0 0 1 2.168 4.5" />
              </svg>

              Ãœber neue Produkte benachrichtigen
            </button>
          <% end %>
          <% if Current.user == @user %>
            <%= link_to new_product_path do %>
              <button>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 mr-2 opacity-50">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>

                Neues Produkt
              </button>
            <% end %>
            <%= link_to edit_user_path(@user), class: "secondary" do %>
              <button>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 mr-2 opacity-50">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                </svg>

                Profil bearbeiten
              </button>
            <% end %>
            <%= button_to session_path, method: :delete, class: "secondary" do %>
              Abmelden
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 ml-2 rotate-180 opacity-50">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15m-3 0-3-3m0 0 3-3m-3 3H15" />
              </svg>
            <% end %>
          <% end %>
        </div>
      </div>
      <p class="text-xl sm:text-3xl text-gray-600">
        <%= @user.bio %>
      </p>
    </div>
  </div>

  <%= render partial: 'products/grid', locals: { products: @user.products } %>
</div>
