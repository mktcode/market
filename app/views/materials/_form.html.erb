<div class="nested-form-wrapper flex space-x-3" data-new-record="<%= f.object.new_record? %>">
  <div>
    <%= f.label :name, "Bezeichnung" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :cost, "Kosten" %>
    <%= f.number_field :cost %>
  </div>
  <div>
    <%= f.check_box :secondhand %>
    <%= f.label :secondhand, "Gebraucht" %>
  </div>
  <div>
    <button type="button" data-action="nested-form#remove">entfernen</button>
    <%= f.hidden_field :_destroy %>
  </div>
</div>